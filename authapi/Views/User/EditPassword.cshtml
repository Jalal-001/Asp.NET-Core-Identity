@model EditPasswordModel
   
<div class="col-md-8">
    <form asp-controller="User" asp-action="EditPassword" method="post">
        <div class="all-summary text-danger" asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="@Model.OldPassword" class="form-label"></label>
            <input asp-for="@Model.OldPassword" type="text" class="form-control">
            <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.NewPassword" class="form-label"></label>
            <input asp-for="@Model.NewPassword" type="text" class="form-control">
            <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>      
</div>

