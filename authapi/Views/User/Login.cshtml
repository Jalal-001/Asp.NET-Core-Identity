@model LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <form asp-controller="User" asp-action="Login" method="post">
                    <div class="all-summary text-danger" asp-validation-summary="All"></div>
                    <div class="mb-3">
                        <label asp-for="@Model.email" class="form-label"></label>
                        <input asp-for="@Model.email" type="text" class="form-control">
                        <span asp-validation-for="@Model.email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="@Model.password" class="form-label"></label>
                        <input asp-for="@Model.password" type="password" class="form-control" >
                        <span asp-validation-for="@Model.password" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <a href="/User/ResetPassword" class="forgot-password">Forgot Password</a>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>      
            </div>
        </div>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>